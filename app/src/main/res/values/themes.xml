<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme -->
    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="android:navigationBarColor">@color/colorNavBar</item>
        <item name="materialButtonStyle">@style/Widget.MyApplication.Button</item>

        <!-- Custom BottomNav style -->
        <item name="bottomNavigationStyle">@style/Widget.MyApp.BottomNavigationView</item>
    </style>

    <!-- Custom BottomNavigationView style -->
    <style name="Widget.MyApp.BottomNavigationView"
        parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- removed the per‐item pill -->
        <item name="itemBackground">@null</item>
        <!-- removed ripple -->
        <item name="rippleColor">@android:color/transparent</item>
    </style>

</resources>
