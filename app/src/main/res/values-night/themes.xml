<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App Theme -->
    <style name="Theme.MyApplication" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="android:navigationBarColor">@color/colorNavBar</item>

        <item name="materialButtonStyle">@style/Widget.MyApplication.Button</item>

        <!-- override the BottomNavigationView style -->
        <item name="bottomNavigationStyle">
            @style/Widget.MyApplication.BottomNavView
        </item>
    </style>

    <!-- Custom BottomNavigationView style -->
    <style name="Widget.MyApplication.BottomNavView"
        parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- removed the per‐item pill -->
        <item name="android:background">@android:color/transparent</item>
        <!-- removed ripple -->
        <item name="rippleColor">@android:color/transparent</item>
    </style>

</resources>
