<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTotalSessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Sessions: 0"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground" />

        <TextView
            android:id="@+id/tvTotalVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Total Volume: 0.0 lbs"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground" />

        <TextView
            android:id="@+id/tvAvgReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Avg Reps: 0.0"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground" />

        <TextView
            android:id="@+id/tvMaxWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Max Weight: 0.0 lbs"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground" />

        <Button
            android:id="@+id/btnClearHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Clear History"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
